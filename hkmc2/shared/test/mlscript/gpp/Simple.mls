keyword inc
define Inc ::= inc Expr ~> ($1 + 1)
inc x
inc 1 + 2
//│ |keyword| |inc|↵|define| |Inc| |::=| |inc| |Expr| |~>| |(|$1| |+| |1|)|↵|inc| |x|↵|inc| |1| |+| |2|
